{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"@sdk/*": ["./src/graphql/schema-builder-sdk/*"]
		},
		"plugins": [
			{
				"name": "gql.tada/ts-plugin",
				"schemas": [
					{
						"name": "schema-builder",
						"schema": "./src/graphql/schema-builder/schema.graphql",
						"tadaOutputLocation": "./src/graphql/schema-builder/sb.env.d.ts"
					},
					{
						"name": "dashboard",
						"schema": "./src/graphql/dashboard/schema.graphql",
						"tadaOutputLocation": "./src/graphql/dashboard/crm.env.d.ts"
					}
				]
			},
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/dev/types/**/*.ts"],
	"exclude": [
		"node_modules",
		"src/components/dashboard/data-grid/glide-grid-examples",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/__tests__/**/*"
	]
}

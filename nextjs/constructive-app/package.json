{
  "name": "constructive-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3001",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "codegen": "rm -rf ./src/graphql/schema-builder-sdk && npx @constructive-io/graphql-codegen generate --config ./graphql-codegen.config.ts",
    "codegen:w": "npx @constructive-io/graphql-codegen generate --config ./graphql-codegen.config.ts --watch",
    "seed:schema-builder": "npx tsx scripts/seed-schema-builder.ts"
  },
  "dependencies": {
    "@0no-co/graphql.web": "^1.0.0",
    "@base-ui/react": "^1.0.0",
    "@constructive-io/ui": "0.1.1",
    "@lukemorales/query-key-factory": "^1.3.4",
    "@remixicon/react": "^4.8.0",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.16",
    "@use-gesture/react": "^10.3.1",
    "clsx": "^2.1.1",
    "gql-ast": "^2.7.0",
    "graphql": "15.8.0",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.26",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.2",
    "@constructive-io/graphql-codegen": "^3.2.0",
    "@eslint/eslintrc": "^3.3.3",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.3.2",
    "eslint-plugin-react-hooks": "5.2.0",
    "prettier": "^3.7.4",
    "prettier-plugin-classnames": "^0.8.6",
    "prettier-plugin-merge": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}